<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txtRoomType"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRooms">

    <LinearLayout
        android:layout_width="407dp"
        android:layout_height="725dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/test_custom_background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="51dp" />

        <ImageView
            android:id="@+id/btnAmen"
            android:layout_width="match_parent"
            android:layout_height="158dp"
            app:srcCompat="@drawable/yp" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:gravity="center"
            android:text="ADD ROOMS AVAILABLE TO BOOK"
            android:textColor="#FF9800"
            android:textSize="14sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="18dp" />

        <EditText
            android:id="@+id/txtSender"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:hint="Room ID"
            android:textSize="12sp" />


        <EditText
            android:id="@+id/txtReceiver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:textSize="12sp" />


        <EditText
            android:id="@+id/txtRoomTypeBooking"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="Room Type"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/txtCost"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="Cost"
            android:textSize="12sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <Button
            android:id="@+id/btnCOvernight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD ROOM"
            android:textColor="#FFFFFF"
            android:textColorHint="#FF5722"
            android:textColorLink="#FFFFFF"
            android:textSize="12sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>